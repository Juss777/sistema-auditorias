+      background-color: var(--background-gris);
+
+      .p-dialog-title {
+        font-size: 1.8rem;
+        font-family: var(--main-font-demi);
+        line-height: 1.4;
+
+        @media (min-width: 768px) {
+          font-size: 2rem;
+        }
+      }
+
+      .p-dialog-header-icons {
